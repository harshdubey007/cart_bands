<% include ../partials/header.ejs %>
<% if (products){ %>
    <div class="row">
        <div class="col-sm-6 col-md-6 col-md-offset-3 col-sm-offset-3">
            <ul class="list-group">
                <% products.forEach(function(products){ %>
                    <li class="list-group-item">
                        <span class="badge"><%= products.qty %></span>
                        <span style="font-weight: bold"><%= products.item.title %></span>
                        <span class="label label-success"> $ <%= products.price %></span>
                        
                    </li>
                <% }) %>
            </ul>
        </div>
    </div>
    <div class="row">
        <div class="col-sm-6 col-md-4 col-md-offset-4 col-sm-offset-3">
            <strong>Total: <%= totalPrice %></strong>
        </div>
    </div>
    <hr>
    <div class="row">
        <div class="col-sm-6 col-md-4 col-md-offset-4 col-sm-offset-3">
            <a href="/checkout" type="button" class="btn btn-success">Checkout</a>
        </div>
    </div>
    <% } %>
    <% if (!products){ %>
    <div class="row">
        <div class="col-sm-6 col-md-4 col-md-offset-4 col-sm-offset-3">
            <h2>No Items in Cart yet!</h2>
        </div>
    </div>
    <% } %>
    <% include ../partials/footer.ejs %>
